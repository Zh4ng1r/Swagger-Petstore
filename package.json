{
  "name": "swagger-petstore",
  "version": "1.0.0",
  "description": "Repository Description: Automated API testing project for Swagger Petstore using TypeScript, Playwright Test, and Allure Reporter. Includes service layers, reusable test utilities, and fully structured tests for Pets, Users, and Store endpoints. Generates detailed Allure reports for test results and is designed for scalability and CI integration.",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",

    "allure:serve": "npm run test:allure && npm run allure:generate && npm run allure:open",
    "test:allure": "npx playwright test --reporter=list,allure-playwright",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zh4ng1r/Swagger-Petstore.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Zh4ng1r/Swagger-Petstore/issues"
  },
  "homepage": "https://github.com/Zh4ng1r/Swagger-Petstore#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/axios": "^0.9.36",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "allure-js-commons": "^3.4.2",
    "axios": "^1.13.2"
  }
}
